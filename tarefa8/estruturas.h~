#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <string.h>

typedef struct lista lista;
typedef const char* string;

typedef struct Arvore {
    int rotulo;
    struct Arvore *pai, *esq, *dir;
} Arvore, NoArv;

Arvore *criaArvore();
Arvore *criaNo(int info);
void insereNo(int info, Arvore **arv);
Arvore *busca(Arvore *arv, int valor);
void troca( Arvore **raiz, NoArv **u, NoArv **v );
void removeNo( Arvore **raiz, int chave );
void removeConjunto(Arvore *M, Arvore **arv);
NoArv *min_subarv( NoArv *u );
void afunila(Arvore **raiz, int valor);
void rotDir(Arvore **raiz, NoArv *x );
void rotEsq( Arvore **raiz, NoArv *x );
void freeArvBin( Arvore **arv);